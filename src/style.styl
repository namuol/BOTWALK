html,body 
  background-color #000
  color #fff
  font-family helvetica, arial, sans-serif
  margin 0
  padding 0
  font-size 10pt

#main
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  margin auto
  width 450px
  height 500px

#canvas
  border none
  width 450px
  height 600px

p
  margin 0
  padding 0
  text-align center

a
  color #8ad2cf
  text-decoration none
  font-weight bold

a:hover, .beer a:hover
  color #8ad2cf + #222

.beer
  padding 10px
  margin-top -30px

.beer a
  color #8ad2cf - #888

.tweet
  float left
.fb
  float right

.kong
  padding-top 5px

.kong img
  vertical-align middle
  margin-top -2px
